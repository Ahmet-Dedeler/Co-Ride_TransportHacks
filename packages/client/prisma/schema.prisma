datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum UserStatus {
  driver
  commuter
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  passwordHash String

  preference Preference?
}

model Preference {
  userId       String     @id
  status       UserStatus
  startPointId String
  endPointId   String

  user       User     @relation(fields: [userId], references: [id])
  startPoint Location @relation("StartPoint", fields: [startPointId], references: [id], map: "startPointLocationId")
  endPoint   Location @relation("EndPoint", fields: [endPointId], references: [id], map: "endPointLocationId")

  @@index([userId])
  @@index([startPointId])
  @@index([endPointId])
}

model Location {
  id         String       @id @default(cuid())
  lat        Float
  lng        Float
  startUsers Preference[] @relation("StartPoint")
  endUsers   Preference[] @relation("EndPoint")
}
